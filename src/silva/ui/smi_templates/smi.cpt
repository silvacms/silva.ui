<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head tal:define="css_path static.css();
                  img_path static.img();
                  js_path static.js()">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;"/>
  <title>Silva</title>
  <link rel="stylesheet" href="${css_path}/style.css" type="text/css"/>
  <link rel="stylesheet" href="${css_path}/smi.css" type="text/css"/>
  <link rel="apple-touch-icon" href="${img_path}/apple-touch-icon.png" />
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script>
  <script type="text/javascript">
    <!-- !window.jQuery && document.write(unescape('%3Cscript src="js/jquery-1.4.4.min.js" type="text/javascript"%3E%3C/script%3E'))
        -->
        </script>
  <script type="text/javascript" src="${js_path}/jquery.jstree.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.tablednd-0.5.min.js"></script>
  <script type="text/javascript" src="ckeditor/ckeditor.js"></script>
  <script type="text/javascript" src="ckeditor/adapters/jquery.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.dialog.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.tree.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.main.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.info.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.contents.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.editor.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.properties.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.history.js"></script>
  <script type="text/javascript" src="${js_path}/jquery.smi.access.js"></script>
</head>

<body tal:define="img_path static.img()">
  <div id="header">
    <h1><img src="${img_path}/infrae.png" alt="Infrae" /></h1>
    <ol>
      <li><a href="#">Manage</a></li>
      <li><a href="#">Settings</a></li>
      <li><a href="#">Logout</a></li>
    </ol>
  </div>
  <div id="main">
    <div id="tree"></div>
    <div id="contents"></div>
  </div>
  <script type="text/javascript">
    $(document).ready(function(){
      $('body').SMI({
        tree: {
          container: "#tree",
          data: "++rest++items"
        },
        main: {
          container: "#contents",
          data: "++rest++items?interface=silva.core.interfaces.content.IAsset"
        }
      });
    });
  </script>
</body>
</html>
